@{
    ViewBag.Title = "Funcionários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="card">
    <header class="card-header" data-background-color="green">
        Funcionarios
    </header>
    <div class="card-body table-responsive">
        <table class="table table-hover" id="grid-basic">
            <thead>
                <tr class="text-success">
                    <th data-column-id="NOME">
                        Nome
                    </th>
                    <th data-column-id="CPF">
                        CPF
                    </th>
                    <th data-column-id="CHAPA">
                        Chapa
                    </th>
                    <th data-column-id="ADMISSAO">
                        Admissão
                    </th>
                    <th data-column-id="DATANASCIMENTO">
                        Data de Nascimento
                    </th>
                    <th data-column-id="FILIAL">
                        Filial
                    </th>
                    @*<th data-column-id="COLIGADA">
                        Coligada
                    </th>*@
                    @*<th data-column-id="DEPARTAMENTO">
                        Departamento
                    </th>*@
                    <th data-column-id="SECAO">
                        Seção
                    </th>
                    <th data-column-id="CARGO">
                        Cargo
                    </th>
                    <th data-column-id="SITUACAO">
                        Situação
                    </th>
                    <th data-column-id="DESCRICAO">
                        Horário
                    </th>
                </tr>
            </thead>
            <tbody id="Resultado">
                @{
                    Html.RenderPartial("Resultado");
                }
            </tbody>
        </table>
    </div>
</section>
<br />

@section scripts{
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    $(document).ready(function () {
        $("#Funcionarios").addClass("active")
    });
</script>



<link rel="stylesheet" href="~/Content/jquery.bootgrid.css" />
<script src="~/Scripts/jquery.bootgrid.js"></script>
<script>
    $(document).ready(function () {
        BuscarFuncionariosRM();
    });
</script>
}