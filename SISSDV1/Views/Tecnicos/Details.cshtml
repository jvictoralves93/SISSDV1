@model SISSDV1.Models.Tecnico

@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<!-- Section -->
<section class="card">
    <header class="card-header" data-background-color="green">
        @Model.NomeTecnico
    </header>
    <div class="card-body table-responsive">

        <table class="table table-hover">
            <thead>
                <tr class="text-success">
                    <th>@Html.DisplayNameFor(model => model.Unidade.NomeUnidade)</th>
                    <th>@Html.DisplayNameFor(model => model.NomeTecnico)</th>
                    <th>@Html.DisplayNameFor(model => model.Celular)</th>
                    <th>@Html.DisplayNameFor(model => model.Ramal)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayFor(model => model.Unidade.NomeUnidade)</td>
                    <td>@Html.DisplayFor(model => model.NomeTecnico)</td>
                    <td>@Html.DisplayFor(model => model.Celular)</td>
                    <td>@Html.DisplayFor(model => model.Ramal)</td>
                </tr>
            </tbody>
        </table>
    </div>
</section>

<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.IDTecnico }) |
    @Html.ActionLink("Voltar", "Index")
</p>
