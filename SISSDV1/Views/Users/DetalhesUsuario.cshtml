@model SISSDV1.Models.User
@{
    Layout = null;
}

<div class="modal-dialog card" role="document" style="margin-top: 4%;">
    <div class="contentmodal">
        <div class="card-header" data-background-color="green">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="title">Detalhes Usuário</h4>
        </div>
        <div class="modal-body card-body">
            <div class="row">
                <div class="form-group col-md-12">
                    <h2 id="nomeresult">@Html.DisplayFor(model => model.NomeExibicao)</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                    <p id="emailresult">@Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", id = "nomecompleto", disabled="disabled" } })</p>
                </div>
                <div class="col-md-9"></div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Cargo, htmlAttributes: new { @class = "control-label" })
                    <p id="cargoresult"> 
                    @Html.EditorFor(model => model.Cargo, new { htmlAttributes = new { @class = "form-control", id = "cargo", disabled = "disabled" } })
                    </p>
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Telefone, htmlAttributes: new { @class = "control-label" })
                    <p id="telefoneresult"> 
                    @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control", id = "telefone", disabled = "disabled" } })
                    </p>
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Gerente, htmlAttributes: new { @class = "control-label" })
                    <p id="gerenteresult">
                    @Html.EditorFor(model => model.Gerente, new { htmlAttributes = new { @class = "form-control", id = "gerente", disabled = "disabled" } })
                    </p>
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label" })
                    <p id="usuarioresult">
                     @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", id = "usuario", disabled = "disabled" } })
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Pais, htmlAttributes: new { @class = "control-label" })
                    <p id="paisresult">
                    @Html.EditorFor(model => model.Pais, new { htmlAttributes = new { @class = "form-control", id = "pais", disabled = "disabled" } })
                    </p>
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label" })
                    <p id="estadoresult">
                    @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control", id = "estado", disabled = "disabled" } })
                    </p>
                </div>
                <div class="col-md-6"></div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Cidade, htmlAttributes: new { @class = "control-label" })
                    <p id="cidaderesult">
                    @Html.EditorFor(model => model.Cidade, new { htmlAttributes = new { @class = "form-control", id = "cidade", disabled = "disabled" } })
                    </p>
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Unidade, htmlAttributes: new { @class = "control-label" })
                    <p id="unidaderesult">
                    @Html.EditorFor(model => model.Unidade, new { htmlAttributes = new { @class = "form-control", id = "unidade", disabled = "disabled" } })
                    </p>
                </div>
                <div class="col-md-6"></div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <button onclick="modalreset();" class="btn btn-info btn-sm">Resetar Senha</button>
                    <button onclick="excluir();" class="btn btn-danger btn-sm">Excluir Usuário</button>
                </div>
            </div>
        </div>
    </div><!-- modal-content -->
</div><!-- modal-dialog -->