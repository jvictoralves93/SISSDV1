@{
    ViewBag.Title = "Usuários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Form de Pesquisa dos Usuários -->
<div class="form-group">
    <label class="control-label">Digite o Usuário</label>
    <input type="text" id="usuarios" name="usuarios"
           placeholder="Digite o nome, usuário ou cargo..." class="form-control"
           style="width: 100%" onkeypress="Click();">
</div>

<p>
    <button class="btn btn-primary btn-sm novo" onclick="ModalNovoUsuario();">Novo Usuário</button>
</p>

<div class="load"></div>
<!-- Tabela de listagem dos usuários -->
<section class="card">
    <header class="card-header" data-background-color="green">
        Usuários
    </header>
    <div class="table-responsive card-body">
        <table class="table table-condensed" id="grid-basic">
            <thead>
                <tr class="text-success">
                    <th data-column-id="NomeExibicao">
                        Nome Completo
                    </th>
                    <th data-column-id="Email">
                        Email
                    </th>
                    <th data-column-id="Cargo">
                        Cargo
                    </th>
                    <th data-column-id="StatusTexto">
                        Status
                    </th>
                    <th data-column-id="Chapa">
                        Chapa
                    </th>
                    <th data-column-id="commands">

                    </th>
                </tr>
            </thead>
            <tbody id="Resultado">
                @{
                    Html.RenderPartial("Resultado");
                }
            </tbody>
        </table>
    </div>
</section>
<br />

<!-- Madal's -->
<div class="container">
    <div class="modal right fade" id="modalNovo">
    </div>
</div>
<div class="container">
    <div class="modal fade" id="modalVerificar">
    </div>
</div>
<div class="container">
    <div class="modal fade" id="modalSucesso">
    </div>
</div>
<div class="modal right fade" id="modalDetalhes" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"></div>
<div class="modal right fade" id="modalEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"></div>
<div class="modal fade" id="modalReset"></div>
<div class="modal fade" id="modalVerificaResult"></div>

<!-- Fim Modal's -->
<!-- Chama os Modals -->
