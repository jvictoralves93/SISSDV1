@model SISSDV1.Models.Link

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Request.Cookies["Acesso"] == null)
    {
        Response.Redirect("Index");
    }
}

<br />
<div class="card">
    <header class="card-header" data-background-color="green">
        Editar Link
    </header>
    <div class="card-body">
        @using (Html.BeginForm("Edit", "Links", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IDLink)

            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.IDOperadora, "Operadora", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("IDOperadora", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDOperadora, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.Designacao, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Designacao, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Designacao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.CodigoCliente, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.CodigoCliente, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CodigoCliente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.Capacidade, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Capacidade, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Capacidade, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.Tipo, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Tipo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
                </div>
            </div>            
            
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.IDUnidade, "Unidade", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("IDUnidade", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDUnidade, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12" style="margin-top: 2%">
                    <div class="pull-right">
                        @Html.ActionLink("Voltar", "Index", "Links", new { @class = "btn btn-danger btn-sm" })
                        <input type="submit" value="Salvar" class="btn btn-primary btn-sm" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<br />


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
