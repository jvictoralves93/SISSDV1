@model SISSDV1.Models.Operadora

@{
    ViewBag.Title = "Deletar Operadora";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Request.Cookies["Acesso"] == null)
    {
        Response.Redirect("Index");
    }
}


<br />
<!-- Section -->
<section class="card">
    <header class="card-header" data-background-color="green">
        @Model.NomeOperadora
    </header>
    <div class="card-body table-responsive">

        <table class="table table-hover">
            <thead>
                <tr class="text-success">
                    <th>@Html.DisplayNameFor(model => model.NomeOperadora)</th>
                    <th>@Html.DisplayNameFor(model => model.Contato)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayFor(model => model.NomeOperadora)</td>
                    <td>@Html.DisplayFor(model => model.Contato)</td>
                </tr>
            </tbody>
        </table>
    </div>

    @using (Html.BeginForm("Delete", "Operadoras", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <br />
        <div class="form-actions text-center">
            @Html.ActionLink("Voltar", "Index", "Operadoras", new { @class = "btn btn-primary btn-sm" }) |
            <input type="submit" value="Confirmar" class="btn btn-danger btn-sm" /> 
        </div>
    }
</section>
<br />